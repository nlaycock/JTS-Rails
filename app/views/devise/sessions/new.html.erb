
<div class="container">
  <div class="top-space"></div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row">

    <!-- Article main content -->
    <article class="col-xs-12 maincontent">
      <header class="page-header">
        <h1 class="page-title text-center">Sign in</h1>
      </header>

      <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-default">
          <div class="panel-body">
            <h3 class="thin text-center">Sign in to your account</h3>
            <p class="text-center text-muted">Lorem ipsum dolor sit amet, <a href="signup.html">Register</a> adipisicing elit. Quo nulla quibusdam cum doloremque incidunt nemo sunt a tenetur omnis odio. </p>
            <hr>

            <form>
              <div class="top-margin">
                <label>Email <span class="text-danger">*</span></label>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
              <div class="top-margin">
                <label>Password <span class="text-danger">*</span></label>
                <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
              </div>

              <hr>
              <% if devise_mapping.rememberable? -%>
                  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
                  <% end -%>
              <div class="row">
                <div class="col-lg-8">
                  <b><%= link_to('Forgot password?', edit_user_password_path) %></a></b>
                </div>
                <div class="col-lg-4 text-right">
                  <button class="btn btn-action" type="submit">Sign in</button>
                </div>
              </div>
            </form>
          </div>
        </div>

      </div>

    </article>
    <!-- /Article -->

  </div>
</div>	<!-- /container -->
<% end %>
</div>
